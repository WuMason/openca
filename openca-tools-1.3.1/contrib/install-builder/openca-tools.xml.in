<project>
    <shortName>opencatools</shortName>
    <fullName>OpenCA Tools v@VERSION@</fullName>
    <version>@VERSION@</version>
    <!-- <installerFilename>openca-tools-@VERSION@-${platform_name}-installer.${platform_exec_suffix}</installerFilename> -->

    <licenseFile>../../COPYING</licenseFile>
    <leftImage>images/openca_installer.png</leftImage>
    <splashImage>images/openca_splash.png</splashImage>
    <allowComponentSelection>0</allowComponentSelection>
    <enableRollback>1</enableRollback>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <saveRelativePaths>1</saveRelativePaths>
    <registerWithPackageDatabase>1</registerWithPackageDatabase>
    <vendor>OpenCA Labs</vendor>
    <summary>Open Source PKI Tools</summary>
    <release>1</release>
    <description>Basic PKI tools for supporting SCEP and PKCS#7 signed/encrypted data</description>
    <uninstallerDirectory>${installdir}/share/openca-tools</uninstallerDirectory>

        <component>
            <name>ldap</name>
            <description>LDAP Management</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>LDAP Management CGI</description>
                    <destination>@cgi_fs_prefix@</destination>
                    <name>ldapcgi</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>@build_dir@@ldap_cgi_fs_prefix@</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>LDAP Management HTDocs</description>
                    <destination>@htdocs_fs_prefix@</destination>
                    <name>ldaphtml</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>@build_dir@@ldap_htdocs_fs_prefix@</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Ldap Menu CFG</description>
                    <destination>${installdir}/etc/openca/menus</destination>
                    <name>ldapmenuconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/menus/ldap-menu.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>LDAP Management SRV</description>
                    <destination>${installdir}/etc/openca/servers</destination>
                    <name>ldapsrv</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/servers/ldap.conf.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>@httpd_user@</owner>
			    <group>@httpd_group@</group>
			    <files>${installdir}/etc/openca/servers/*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
                <folder>
                    <description>LDAP Management AC</description>
                    <destination>${installdir}/etc/openca/access_control</destination>
                    <name>ldapac</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/access_control/ldap.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>@openca_user@</owner>
			    <group>@httpd_group@</group>
			    <files>@build_dir@@etc_prefix@/access_control/ldap.xml*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
            </folderList>
        </component>

        <component>
            <name>ra</name>
            <description>Registration Authority</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Registration Authority CGI</description>
                    <destination>@cgi_fs_prefix@</destination>
                    <name>racgi</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>@build_dir@@ra_cgi_fs_prefix@</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Registration Authority HTDocs</description>
                    <destination>@htdocs_fs_prefix@</destination>
                    <name>rahtml</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>@build_dir@@ra_htdocs_fs_prefix@</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Registration Authority Menu CFG</description>
                    <destination>${installdir}/etc/openca/menus</destination>
                    <name>ramenuconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/menus/ra-menu.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Registration Authority SRV</description>
                    <destination>${installdir}/etc/openca/servers</destination>
                    <name>rasrv</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/servers/ra.conf.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>@httpd_user@</owner>
			    <group>@httpd_group@</group>
			    <files>${installdir}/etc/openca/servers/*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
                <folder>
                    <description>Registration Authority AC</description>
                    <destination>${installdir}/etc/openca/access_control</destination>
                    <name>raac</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/access_control/ra.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>@openca_user@</owner>
			    <group>@httpd_group@</group>
			    <files>@build_dir@@etc_prefix@/access_control/ra.xml*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
            </folderList>
        </component>

        <component>
            <name>ca</name>
            <description>Certification Authority</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Certification Authority CGI</description>
                    <destination>@cgi_fs_prefix@</destination>
                    <name>cacgi</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>@build_dir@@ca_cgi_fs_prefix@</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Certification Authority HTDocs</description>
                    <destination>@htdocs_fs_prefix@</destination>
                    <name>cahtml</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>@build_dir@@ca_htdocs_fs_prefix@</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Certification Authority Menu CFG</description>
                    <destination>${installdir}/etc/openca/menus</destination>
                    <name>camenuconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/menus/ca-menu.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Certification Authority Server CFG</description>
                    <destination>${installdir}/etc/openca/servers</destination>
                    <name>casrvconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/servers/ca.conf.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>@httpd_user@</owner>
			    <group>@httpd_group@</group>
			    <files>@build_dir@@etc_prefix@/servers/*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
                <folder>
                    <description>Certification Authority AC</description>
                    <destination>${installdir}/etc/openca/access_control</destination>
                    <name>casrvac</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/access_control/ca.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>@openca_user@</owner>
			    <group>@httpd_group@</group>
			    <files>@build_dir@@etc_prefix@/access_control/ca.xml*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
            </folderList>
        </component>

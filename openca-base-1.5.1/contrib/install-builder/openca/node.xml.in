        <component>
            <name>node</name>
            <description>Node Management</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Node Administration CGI</description>
                    <destination>@cgi_fs_prefix@</destination>
                    <name>nodecgi</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>@build_dir@@node_cgi_fs_prefix@</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Node Administration HTDocs</description>
                    <destination>@htdocs_fs_prefix@</destination>
                    <name>nodehtml</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>@build_dir@@node_htdocs_fs_prefix@</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Node Administration AC</description>
                    <destination>${installdir}/etc/openca/access_control</destination>
                    <name>nodeac</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/access_control/node.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>@openca_user@</owner>
			    <group>@httpd_group@</group>
			    <files>@build_dir@@etc_prefix@/access_control/node.xml*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
                <folder>
                    <description>Node Menu CFG</description>
                    <destination>${installdir}/etc/openca/menus</destination>
                    <name>nodemenuconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/menus/node-menu.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Node Administration Servers</description>
                    <destination>${installdir}/etc/openca/servers</destination>
                    <name>nodesrv</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>@build_dir@@etc_prefix@/servers/node.conf.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>@httpd_user@</owner>
			    <group>@httpd_group@</group>
			    <files>${installdir}/etc/openca/servers/*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
            </folderList>
        </component>
